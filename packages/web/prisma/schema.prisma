// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

generator zod {
  provider       = "prisma-zod-generator"
  output         = "../src/generated/zod"
  useMultipleFiles = "true"
}

datasource db {
  provider = "postgresql"
  // Note: DATABASE_URL is configured in prisma.config.ts for Prisma 7
}

// User model - Note: Supabase Auth handles authentication, this is for app-specific user data
model User {
  id            String            @id @default(uuid()) @db.Uuid
  email         String            @unique
  name          String?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  
  preferences   SearchPreference[]
  recommendations Recommendation[]
  notifications Notification[]
  
  @@index([email])
  @@map("users")
}

model SearchPreference {
  id          String   @id @default(uuid()) @db.Uuid
  userId      String   @db.Uuid
  name        String
  categories  String[] // Array of categories: ["antique", "collectible", "vintage"]
  keywords    String[] // Array of keywords (optional)
  minPrice    Decimal? @db.Decimal(10, 2)
  maxPrice    Decimal? @db.Decimal(10, 2)
  marketplaces String[] // Array of marketplaces: ["amazon", "ebay"]
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, isActive])
  @@map("search_preferences")
}

model Listing {
  id            String         @id @default(uuid()) @db.Uuid
  marketplace   String         // "amazon" | "ebay"
  marketplaceId String         // ASIN, eBay item ID, etc.
  title         String
  description   String?        @db.Text
  price         Decimal        @db.Decimal(10, 2)
  currency      String         @default("USD")
  images        String[]       // Array of image URLs
  category      String?
  condition     String?        // "new", "used", "vintage", etc.
  sellerName    String?
  sellerRating  Decimal?       @db.Decimal(3, 2) // 0-5 scale
  listingUrl    String
  available     Boolean        @default(true)
  lastChecked   DateTime       @default(now())
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  
  evaluation    AIEvaluation?
  recommendations Recommendation[]
  
  @@unique([marketplace, marketplaceId])
  @@index([marketplace, marketplaceId])
  @@map("listings")
}

model AIEvaluation {
  id                    String   @id @default(uuid()) @db.Uuid
  listingId             String   @unique @db.Uuid
  estimatedMarketValue  Decimal  @db.Decimal(10, 2)
  undervaluationPercentage Decimal @db.Decimal(5, 2) // e.g., 25.5 for 25.5%
  confidenceScore       Int      // 0-100
  reasoning             String   @db.Text
  factors               String[] // Array of factors
  promptVersion         String
  modelVersion          String   // e.g., "gpt-4-turbo"
  evaluatedAt           DateTime @default(now())
  
  listing               Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  
  @@index([listingId])
  @@map("ai_evaluations")
}

model Recommendation {
  id          String      @id @default(uuid()) @db.Uuid
  userId      String      @db.Uuid
  listingId   String      @db.Uuid
  status      String      @default("new") // "new" | "viewed" | "dismissed" | "purchased"
  priority    Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  viewedAt    DateTime?
  dismissedAt DateTime?
  purchasedAt DateTime?
  
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  listing     Listing     @relation(fields: [listingId], references: [id], onDelete: Cascade)
  
  @@unique([userId, listingId])
  @@index([userId, status])
  @@index([createdAt])
  @@map("recommendations")
}

model Notification {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @db.Uuid
  type      String   // "new_recommendation" | "system_update" | "preference_updated"
  title     String
  message   String   @db.Text
  read      Boolean  @default(false)
  readAt    DateTime?
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, read])
  @@map("notifications")
}
