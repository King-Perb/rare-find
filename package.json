{
  "name": "rare-find",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@rare-find/web",
    "build": "npm run build --workspace=@rare-find/web",
    "start": "npm run start --workspace=@rare-find/web",
    "lint": "npm run lint --workspace=@rare-find/web",
    "type:check": "npm run type:check --workspaces",
    "test": "npm run test --workspace=@rare-find/web",
    "test:watch": "npm run test:watch --workspace=@rare-find/web",
    "test:e2e": "npm run test:e2e --workspace=@rare-find/web",
    "mobile:start": "npm run start --workspace=@rare-find/mobile",
    "mobile:ios": "npm run ios --workspace=@rare-find/mobile",
    "mobile:android": "npm run android --workspace=@rare-find/mobile",
    "install:all": "npm install"
  },
  "devDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
