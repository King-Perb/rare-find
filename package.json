{
  "name": "rare-find",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "turbo start",
    "lint": "turbo lint",
    "type:check": "turbo type:check",
    "test": "turbo test",
    "test:watch": "npm run test:watch --workspace=@rare-find/web",
    "test:e2e": "npm run test:e2e --workspace=@rare-find/web",
    "mobile:start": "npm run start --workspace=@rare-find/mobile",
    "mobile:ios": "npm run ios --workspace=@rare-find/mobile",
    "mobile:android": "npm run android --workspace=@rare-find/mobile",
    "install:all": "npm install"
  },
  "devDependencies": {
    "turbo": "^2.7.2",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@10.9.2"
}
