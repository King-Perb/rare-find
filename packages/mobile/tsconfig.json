{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@rare-find/shared": [
        "../shared/src"
      ],
      "@rare-find/shared/*": [
        "../shared/src/*"
      ],
      "@react-native-async-storage/async-storage": [
        "../../node_modules/@react-native-async-storage/async-storage"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../shared"
    }
  ]
}
